<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sec_title_layout"
    android:layout_width="match_parent"
    android:fitsSystemWindows="false"
    android:layout_height="@dimen/title_column_height"
    android:background="@color/white" >


    <LinearLayout
            android:id="@+id/title_ly_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/title_sec_left"
                    android:layout_width="@dimen/title_column_height"
                    android:layout_height="@dimen/title_column_height"
                    android:background="@drawable/title_selecor"
                    android:src="@drawable/left_back_gray" />

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_column_height"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="19sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="right|center">

                    <ImageView
                        android:id="@+id/iv_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/set_big" />

                </LinearLayout>

            </FrameLayout>



            <LinearLayout
                android:id="@+id/title_ly_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/title_right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/title_selecor"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="更多"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/title_right"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/title_selecor"
                    android:src="@drawable/download_normal4"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/title_right02"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/title_selecor"
                    android:src="@drawable/title_set"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/title_right03"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/title_selecor"
                    android:src="@drawable/ignore_icon4"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/title_right04"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/title_selecor"
                    android:src="@drawable/bulb_title"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/title_right05"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/title_selecor"
                    android:src="@drawable/more_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/title_right06"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/title_selecor"
                    android:src="@drawable/help_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvTitleRight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:text="编辑"
                    android:textColor="@color/gray_cc"
                    android:layout_marginRight="25dp"
                    android:textSize="14dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_above="@+id/img2"
            android:background="#60575757"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_above="@+id/img1"
            android:background="#40575757"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#20575757"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivTitleLine"
            android:background="@drawable/line_undertitle"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true" />




</RelativeLayout>