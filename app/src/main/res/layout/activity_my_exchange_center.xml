    <LinearLayout
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="#595959"
                android:layout_marginTop="12dp"
                android:text="佣金兑换现金抵用券"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:onClick="convert_click"
                android:id="@+id/convert_brokerage"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/tab_convert_switch"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="12dp"
            android:alpha="0.3"
            android:background="@color/icon_grey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="#595959"
                android:layout_marginTop="12dp"
                android:text="现金抵用券兑换佣金"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:onClick="convert_click"
                android:id="@+id/convert_cash"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/tab_convert_switch"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:text="佣金"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#595959"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="100"
        android:textSize="15sp" />
    <TextView
        android:text="现金抵用券"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#595959"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="100"
        android:textSize="15sp" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColor="#bababa"
        android:text="兑换说明：佣金与现金抵用券兑换比例为1:100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/convert_send"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@mipmap/oval"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:onClick="convert_click"
        android:text="确认兑换"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>