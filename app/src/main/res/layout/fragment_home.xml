<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.Home">
    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--android:focusable="true"-->
    <!--android:focusableInTouchMode="true"-->

    <View
        android:background="@color/home_sousuo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/home_sousuo"
        android:gravity="center"
        android:layout_height="50dp">

            <ImageView
                android:id="@+id/message_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/home_icon_lefttop_information"/>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="0dp"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_weight="8"
            android:focusable="true"
            android:focusableInTouchMode="true" >
            <!--取消EditText焦点-->
            <EditText
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:background="@null"
                android:textSize="10sp"
                android:hint="商品搜索"
               />
        </android.support.v7.widget.CardView>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_icon_upper_right_corner"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/home_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone" />
            <ImageView
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@mipmap/home_banner"/>

            <LinearLayout

                android:id="@+id/linearLayoutTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/home_page01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_main_function_icon01"
                    android:gravity="center"
                    android:text="@string/home_icon1" />

                <TextView
                    android:id="@+id/home_page02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_main_function_icon02"
                    android:gravity="center"
                    android:text="@string/home_icon2" />

                <TextView
                    android:id="@+id/home_page03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_main_function_icon03"
                    android:gravity="center"
                    android:text="@string/home_icon3" />

                <TextView
                    android:id="@+id/home_page04"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_main_function_icon04"
                    android:gravity="center"
                    android:text="@string/home_icon4" />

                <TextView
                    android:id="@+id/home_page05"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_main_function_icon05"
                    android:gravity="center"
                    android:text="@string/home_icon5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/home_page06"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_main_function_icon06"
                    android:gravity="center"
                    android:text="@string/home_icon6" />

                <TextView
                    android:id="@+id/home_page07"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_main_function_icon07"
                    android:gravity="center"
                    android:text="@string/home_icon7" />

                <TextView
                    android:id="@+id/home_page08"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_main_function_icon08"
                    android:gravity="center"
                    android:text="@string/home_icon8" />

                <TextView
                    android:id="@+id/home_page09"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_main_function_icon09"
                    android:gravity="center"
                    android:text="@string/home_icon9" />

                <TextView
                    android:id="@+id/home_page10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_main_function_icon10"
                    android:gravity="center"
                    android:text="@string/home_icon10" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/guestyoulike" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_recy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>