            android:textColor="@drawable/tab_indent_text_color2"
            android:textSize="18sp"
            android:gravity="center"
            android:text="未付款"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/indent_cancel"
            android:textColor="@drawable/tab_indent_text_color2"
            android:textSize="18sp"
            android:gravity="center"
            android:text="已失效"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>
